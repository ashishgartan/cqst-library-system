<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | CQST Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap");
      body {
        font-family: "Plus Jakarta Sans", sans-serif;
        background-color: #f8fafc;
      }
      .login-card {
        background: white;
        border: 1px solid #e2e8f0;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
      }
      input {
        font-size: 14px !important;
        transition: all 0.2s ease;
      }
      input:focus {
        border-color: #ef4444 !important;
        background-color: white !important;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.05) !important;
      }
    </style>
  </head>
  <body class="text-slate-700 min-h-screen flex flex-col">
    <%- include('partials/header') %>

    <main class="flex-1 flex items-center justify-center p-6 bg-slate-50/50">
      <div class="max-w-md w-full">
        <div
          class="login-card rounded-xl p-8 md:p-12 relative overflow-hidden"
        >
          <div
            class="absolute -top-12 -right-12 w-32 h-32 bg-red-50 rounded-xl blur-3xl"
          ></div>

          <div class="text-center mb-10 relative">
            <div
              class="inline-flex items-center justify-center w-20 h-20 rounded-xl bg-slate-900 text-white mb-6 shadow-xl shadow-slate-200"
            >
              <i data-lucide="shield-check" class="w-10 h-10"></i>
            </div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tight">
              Staff Portal
            </h1>
            <p
              class="text-slate-400 text-xs font-bold uppercase tracking-[0.2em] mt-3"
            >
              Identity Verification
            </p>
          </div>

          <form id="loginForm" class="space-y-6 relative">
            <div class="space-y-2">
              <label
                class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                >Work Email</label
              >
              <div class="relative">
                <i
                  data-lucide="mail"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="email"
                  type="email"
                  placeholder="name@cqst.in"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <div class="space-y-2">
              <div class="flex justify-between items-center ml-1">
                <label
                  class="text-[10px] font-black text-slate-400 uppercase tracking-widest"
                  >Password</label
                >
                <a
                  href="#"
                  class="text-[10px] font-black text-red-500 hover:underline uppercase tracking-tighter"
                  >Recovery?</a
                >
              </div>
              <div class="relative">
                <i
                  data-lucide="lock"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="password"
                  type="password"
                  placeholder="••••••••"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <button
              id="submitBtn"
              class="w-full bg-slate-900 hover:bg-red-600 text-white font-black py-4 rounded-xl transition-all shadow-xl shadow-slate-200 active:scale-[0.98] flex items-center justify-center gap-3 uppercase tracking-widest text-xs"
            >
              Login
              <i data-lucide="arrow-right" class="w-4 h-4"></i>
            </button>
          </form>

          <div
            id="msg"
            class="mt-6 text-[11px] text-center font-black uppercase tracking-widest min-h-[20px]"
          ></div>

          <!-- <div class="mt-10 pt-8 border-t border-slate-100 text-center">
            <p class="text-slate-400 text-xs font-medium">
              Don't have staff access?
              <a
                href="/auth/signup"
                class="text-slate-900 font-black hover:text-red-600 transition underline underline-offset-4"
                >Request Enrollment</a
              >
            </p>
          </div> -->
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      lucide.createIcons();
      const loginForm = document.getElementById("loginForm");
      const msg = document.getElementById("msg");
      const submitBtn = document.getElementById("submitBtn");

      loginForm.addEventListener("submit", async (e) => {
        e.preventDefault();

        if (!submitBtn) return;

        // UI Feedback
        msg.textContent = "Verifying Credentials...";
        msg.className =
          "mt-6 text-[11px] text-center text-slate-400 animate-pulse font-black uppercase tracking-widest";
        submitBtn.disabled = true;
        submitBtn.classList.add("opacity-50", "cursor-not-allowed");

        const payload = Object.fromEntries(new FormData(loginForm).entries());

        try {
          const res = await fetch("/auth/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
          });

          const data = await res.json();

          if (res.ok) {
            msg.textContent = "Access Granted. Redirecting...";
            msg.className =
              "mt-6 text-[11px] text-center text-green-600 font-black uppercase tracking-widest";
            submitBtn.classList.replace("bg-slate-900", "bg-green-600");
            setTimeout(() => {
              window.location.href = "/";
            }, 800);
          } else {
            msg.textContent = data.message || "Invalid Credentials";
            msg.className =
              "mt-6 text-[11px] text-center text-red-600 bg-red-50 py-3 rounded-xl border border-red-100 font-black uppercase tracking-widest";
            submitBtn.disabled = false;
            submitBtn.classList.remove("opacity-50", "cursor-not-allowed");
          }
        } catch (err) {
          msg.textContent = "Server Connection Failed";
          msg.className =
            "mt-6 text-[11px] text-center text-red-600 font-black uppercase tracking-widest";
          submitBtn.disabled = false;
          submitBtn.classList.remove("opacity-50", "cursor-not-allowed");
        }
      });
    </script>
  </body>
</html>
