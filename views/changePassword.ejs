<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Security | CQST Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap");
      body {
        font-family: "Plus Jakarta Sans", sans-serif;
        background-color: #f8fafc;
      }
      .content-card {
        background: white;
        border: 1px solid #e2e8f0;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
      }
      input {
        font-size: 14px !important;
        transition: all 0.2s ease;
      }
      input:focus {
        border-color: #ef4444 !important;
        background-color: white !important;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.05) !important;
      }
    </style>
  </head>
  <body class="text-slate-700 min-h-screen flex flex-col">
    <%- include('partials/header') %>

    <main class="flex-1 max-w-xl mx-auto p-6 md:p-12 w-full">
      <div class="mb-8">
        <a
          href="/students"
          class="text-slate-400 hover:text-red-600 flex items-center gap-2 transition text-[11px] font-black uppercase tracking-widest"
        >
          <i data-lucide="chevron-left" class="w-4 h-4"></i> Back to Dashboard
        </a>
      </div>

      <div class="content-card rounded-[2.5rem] overflow-hidden">
        <div class="p-8 md:p-10 border-b border-slate-100 bg-slate-50/50">
          <h1
            class="text-2xl font-black text-slate-900 flex items-center gap-3 tracking-tight"
          >
            <i data-lucide="shield-check" class="text-red-600"></i> Account
            Security
          </h1>
          <p class="text-slate-500 text-xs font-medium mt-2">
            Update your password to keep your administrative access secure.
          </p>
        </div>

        <form id="passwordForm" class="p-8 md:p-10 space-y-6">
          <div class="space-y-2">
            <label
              class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
              >Current Password</label
            >
            <div class="relative">
              <input
                name="currentPassword"
                type="password"
                required
                placeholder="••••••••"
                class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 outline-none placeholder:text-slate-300"
              />
              <button
                type="button"
                onclick="togglePassword(this)"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-300 hover:text-red-500 transition"
              >
                <i data-lucide="eye" class="w-5 h-5"></i>
              </button>
            </div>
          </div>

          <div class="py-2 flex items-center gap-4">
            <div class="h-[1px] bg-slate-100 flex-1"></div>
            <span
              class="text-[9px] font-black text-slate-300 uppercase tracking-[0.2em]"
              >New Credentials</span
            >
            <div class="h-[1px] bg-slate-100 flex-1"></div>
          </div>

          <div class="space-y-2">
            <label
              class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
              >New Password</label
            >
            <div class="relative">
              <input
                id="newPassword"
                name="newPassword"
                type="password"
                required
                placeholder="••••••••"
                class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 outline-none placeholder:text-slate-300"
              />
              <button
                type="button"
                onclick="togglePassword(this)"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-300 hover:text-red-500 transition"
              >
                <i data-lucide="eye" class="w-5 h-5"></i>
              </button>
            </div>
          </div>

          <div class="space-y-2">
            <label
              class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
              >Confirm Password</label
            >
            <div class="relative">
              <input
                id="confirmPassword"
                type="password"
                required
                placeholder="••••••••"
                class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-5 py-4 outline-none placeholder:text-slate-300"
              />
              <button
                type="button"
                onclick="togglePassword(this)"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-300 hover:text-red-500 transition"
              >
                <i data-lucide="eye" class="w-5 h-5"></i>
              </button>
            </div>
            <p
              id="matchError"
              class="text-red-500 text-[10px] font-black mt-3 hidden uppercase tracking-widest bg-red-50 p-2 rounded-lg text-center border border-red-100"
            >
              Error: Passwords do not match!
            </p>
          </div>

          <button
            type="submit"
            id="submitBtn"
            class="w-full bg-slate-900 hover:bg-red-600 text-white font-black py-4 rounded-2xl transition shadow-xl shadow-slate-200 flex justify-center items-center gap-3 uppercase tracking-[0.2em] text-xs active:scale-95"
          >
            Update Security Profile
          </button>
        </form>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      lucide.createIcons();

      /**
       * Toggle Password Visibility
       */
      function togglePassword(button) {
        const input = button.parentElement.querySelector("input");
        const iconContainer = button;

        if (input.type === "password") {
          input.type = "text";
          iconContainer.innerHTML =
            '<i data-lucide="eye-off" class="w-5 h-5"></i>';
        } else {
          input.type = "password";
          iconContainer.innerHTML = '<i data-lucide="eye" class="w-5 h-5"></i>';
        }
        lucide.createIcons();
      }

      /**
       * Form Submission
       */
      document
        .getElementById("passwordForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const btn = document.getElementById("submitBtn");
          const errorEl = document.getElementById("matchError");
          const currentPassword = e.target.currentPassword.value;
          const newPassword = document.getElementById("newPassword").value;
          const confirmPassword =
            document.getElementById("confirmPassword").value;

          // Match Check
          if (newPassword !== confirmPassword) {
            errorEl.classList.remove("hidden");
            return;
          }
          errorEl.classList.add("hidden");

          // UI Loading State
          const originalText = btn.innerHTML;
          btn.disabled = true;
          btn.innerHTML =
            '<i data-lucide="loader-2" class="w-4 h-4 animate-spin"></i> Processing...';
          lucide.createIcons();

          try {
            const res = await fetch("/auth/change-password", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ currentPassword, newPassword }),
            });

            const result = await res.json();

            if (res.ok) {
              btn.classList.replace("bg-slate-900", "bg-green-600");
              btn.innerHTML = "Password Updated!";
              setTimeout(() => {
                window.location.href = "/students";
              }, 1500);
            } else {
              alert(result.message || "Failed to update password.");
              btn.disabled = false;
              btn.innerHTML = originalText;
              lucide.createIcons();
            }
          } catch (err) {
            alert("Network error. Please try again.");
            btn.disabled = false;
            btn.innerHTML = originalText;
            lucide.createIcons();
          }
        });
    </script>
  </body>
</html>
