<%- include('head') %> <%- include('logoutModel') %>

<header
  class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-slate-200 shadow-sm"
>
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-3">
    <a href="/" class="flex items-center gap-3 group">
      <div
        class="bg-red-600 text-white w-10 h-10 flex items-center justify-center rounded-xl transition-transform group-hover:rotate-6 shadow-lg shadow-red-100"
      >
        <i data-lucide="library" class="w-6 h-6"></i>
      </div>
      <div>
        <h1
          class="text-lg font-black text-slate-900 leading-none tracking-tight"
        >
          CQST <span class="text-red-600">LIBRARY</span>
        </h1>
        <p
          class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.2em]"
        >
          Management System
        </p>
      </div>
    </a>

    <% if (user) { %>
    <nav class="hidden lg:flex items-center gap-1">
      <% if (user.role === "admin") { %>
      <a
        href="/"
        class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-b-2 border-red-700 transition-all"
        data-path="/"
      >
        <i data-lucide="layout-dashboard" class="w-4 h-4"></i>
        <span class="font-bold text-sm">Dashboard</span>
      </a>

      <a
        href="/students"
        class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-b-2 border-red-700 transition-all"
        data-path="/students"
      >
        <i data-lucide="users" class="w-4 h-4"></i>
        <span class="font-bold text-sm">Students</span>
      </a>

      <a
        href="/borrow"
        class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-b-2 border-red-700 transition-all"
        data-path="/borrow"
      >
        <i data-lucide="arrow-left-right" class="w-4 h-4"></i>
        <span class="font-bold text-sm">Issue</span>
      </a>

      <a
        href="/upload"
        class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-b-2 border-red-700 transition-all"
        data-path="/upload"
      >
        <i data-lucide="file-up" class="w-4 h-4"></i>
        <span class="font-bold text-sm">Upload</span>
      </a>
      <% } %>

      <a
        href="/books"
        class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-b-2 border-red-700 transition-all"
        data-path="/books"
      >
        <i data-lucide="book-marked" class="w-4 h-4"></i>
        <span class="font-bold text-sm">Books</span>
      </a>
    </nav>
    <div class="flex items-center gap-3">
      <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
        <div class="text-right hidden sm:block">
          <p class="text-sm font-bold text-gray-800 leading-none">
            <%= user.name %>
          </p>
        </div>
        <div class="relative">
          <button onclick="toggleProfileMenu()" class="focus:outline-none">
            <img
              src="<%= user.avatar ? '/uploads/' + user.avatar : 'https://ui-avatars.com/api/?name=' + user.name + '&background=ef4444&color=fff' %>"
              alt="Profile"
              class="w-10 h-10 rounded-full border-2 border-red-700 object-cover cursor-pointer hover:ring-4 hover:ring-red-50 transition-all"
            />
          </button>

          <div
            id="profileDropdown"
            class="absolute right-0 mt-3 w-64 bg-white rounded-xl py-2 shadow-2xl border border-slate-100 hidden flex-col z-[110] transform transition-all origin-top-right"
          >
            <div class="px-6 py-3 border-b border-slate-50 mb-2">
              <p
                class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1"
              >
                Signed in as
              </p>
              <p class="text-sm font-bold text-slate-900 truncate">
                <%= user.email %>
              </p>
            </div>
            <a
              href="/profile"
              class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-l-2 border-red-700 transition-all"
              data-path="/profile"
            >
              <i data-lucide="user-circle" class="w-4 h-4"></i>
              <span class="font-bold text-sm">View Profile</span>
            </a>

            <a
              href="/auth/change-password"
              class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-l-2 border-red-700 transition-all"
              data-path="/auth/change-password"
            >
              <i data-lucide="key-round" class="w-4 h-4"></i>
              <span class="font-bold text-sm">Change Password</span>
            </a>
            <a
              href="/settings"
              class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-l-2 border-red-700 transition-all"
              data-path="/setting"
            >
              <i data-lucide="settings" class="w-4 h-4"></i>
              <span class="font-bold text-sm">Setting</span>
            </a>
            <button
              onclick="openLogoutModal()"
              class="nav-item flex items-center gap-2 px-4 py-2 hover:text-red-700 hover:border-l-2 border-red-700 transition-all"
              data-path="/auth/logout"
            >
              <i data-lucide="log-out" class="w-4 h-4"></i>
              <span class="font-bold text-sm">Log Out</span>
            </button>
          </div>
        </div>
      </div>
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-3 bg-white border border-slate-200 rounded-xl text-slate-400 hover:text-red-600 transition-all"
      >
        <i data-lucide="menu" class="w-5 h-5"></i>
      </button>
    </div>

    <% } else { %>
    <!-- <a
      href="/auth/login"
      class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-md shadow-red-100"
    >
      Login Access
    </a> -->
    <% } %>
  </div>

  <% if (user) { %>
  <div
    id="mobile-menu"
    class="hidden lg:hidden bg-white border-t border-slate-100 p-4 space-y-2"
  >
    <% if (user.role === "admin") { %>
    <a href="/" class="mobile-nav-item flex items-center gap-2 px-4 py-2"
      ><i data-lucide="layout-dashboard"></i>
      <p>Dashboard</p></a
    >
    <a
      href="/students"
      class="mobile-nav-item flex items-center gap-2 px-4 py-2"
      ><i data-lucide="users"></i> Students</a
    >
    <a href="/borrow" class="mobile-nav-item flex items-center gap-2 px-4 py-2"
      ><i data-lucide="arrow-left-right"></i> Issue System</a
    >
    <a href="/upload" class="mobile-nav-item flex items-center gap-2 px-4 py-2"
      ><i data-lucide="arrow-left-right"></i>Upload Data</a
    >
    <% } %>
    <a href="/books" class="mobile-nav-item flex items-center gap-2 px-4 py-2"
      ><i data-lucide="book-marked"></i> Books</a
    >
  </div>
  <% } %>

  <style>
    .nav-item {
      @apply flex items-center gap-2 px-4 py-2 text-[11px] font-black uppercase tracking-widest text-slate-400 rounded-xl transition-all duration-200 hover:bg-slate-50 hover:text-slate-900;
    }
    .nav-active {
      @apply bg-red-50 text-red-600 shadow-sm;
    }

    /* Dropdown Item Styling */
    .dropdown-item {
      @apply flex items-center gap-3 px-6 py-3 text-sm font-bold text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-all;
    }
    .dropdown-item svg {
      @apply w-4 h-4 text-slate-400;
    }
  </style>
  <style>
    /* Light Theme Nav Item Styling */
    .nav-item {
      @apply flex items-center gap-2 px-4 py-2 text-[10px] font-black uppercase tracking-widest text-slate-400 rounded-xl transition-all duration-200 hover:bg-slate-50 hover:text-slate-900;
    }
    .nav-active {
      @apply bg-red-50 text-red-600 shadow-sm;
    }
    .logout-link {
      @apply flex items-center gap-3 px-4 py-3 text-[10px] font-black text-red-600 hover:bg-red-50 rounded-xl transition-all uppercase tracking-[0.1em];
    }
    .mobile-nav-item {
      @apply flex items-center gap-3 p-3 text-[10px] font-black uppercase tracking-widest text-slate-500 bg-slate-50 rounded-xl;
    }
    .nav-item svg,
    .mobile-nav-item svg {
      width: 14px;
      height: 14px;
    }
  </style>

  <script>
    lucide.createIcons();

    const mobileBtn = document.getElementById("mobile-menu-btn");
    if (mobileBtn) {
      const mobileMenu = document.getElementById("mobile-menu");
      mobileBtn.addEventListener("click", () =>
        mobileMenu.classList.toggle("hidden")
      );
    }

    const currentPath = window.location.pathname;
    document.querySelectorAll(".nav-item, .mobile-nav-item").forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("nav-active");
      }
    });
  </script>

  <!-- Profile script -->
  <script>
    lucide.createIcons();

    // Toggle Profile Dropdown
    function toggleProfileMenu() {
      const menu = document.getElementById("profileDropdown");
      menu.classList.toggle("hidden");
      menu.classList.toggle("flex");
    }

    // Close dropdown when clicking outside
    window.addEventListener("click", function (e) {
      const menu = document.getElementById("profileDropdown");
      const avatar = document.querySelector(
        'button[onclick="toggleProfileMenu()"]'
      );

      // if (!avatar.contains(e.target) && !menu.contains(e.target)) {
      //   menu.classList.add("hidden");
      //   menu.classList.remove("flex");
      // }
    });

    // ... Other scripts for Logout Modal and Mobile Menu ...
  </script>
</header>
