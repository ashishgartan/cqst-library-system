<%- include('head') %>

<header
  class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-slate-200 shadow-sm"
>
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-3">
    <a href="/" class="flex items-center gap-3 group">
      <div
        class="bg-red-600 text-white w-10 h-10 flex items-center justify-center rounded-xl transition-transform group-hover:rotate-6 shadow-lg shadow-red-100"
      >
        <i data-lucide="library" class="w-6 h-6"></i>
      </div>
      <div>
        <h1
          class="text-lg font-black text-slate-900 leading-none tracking-tight"
        >
          CQST <span class="text-red-600">LIBRARY</span>
        </h1>
        <p
          class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.2em]"
        >
          Management System
        </p>
      </div>
    </a>

    <% if (user) { %>
    <nav class="hidden lg:flex items-center gap-1">
      <% if (user.role === "admin") { %>
      <a href="/" class="nav-item" data-path="/"
        ><i data-lucide="layout-dashboard"></i><span>Dashboard</span></a
      >
      <a href="/students" class="nav-item" data-path="/students"
        ><i data-lucide="users"></i><span>Students</span></a
      >
      <a href="/borrow" class="nav-item" data-path="/borrow"
        ><i data-lucide="arrow-left-right"></i><span>Issue</span></a
      >
      <a href="/upload" class="nav-item" data-path="/upload"
        ><i data-lucide="file-up"></i><span>Upload</span></a
      >
      <% } %>
      <a href="/books" class="nav-item" data-path="/books"
        ><i data-lucide="book-marked"></i><span>Books</span></a
      >
    </nav>

    <div class="flex items-center gap-2">
      <div class="relative group/profile">
        <button
          class="flex items-center gap-3 p-1 rounded-xl hover:bg-slate-50 transition-all outline-none"
        >
          <div class="relative">
            <img
              src="<%= user.profilePic || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(user.name) + '&background=dc2626&color=fff' %>"
              class="w-9 h-9 rounded-lg object-cover ring-2 ring-slate-100"
              alt="Profile"
            />
            <div
              class="absolute -bottom-1 -right-1 w-3 h-3 bg-green-500 border-2 border-white rounded-full"
            ></div>
          </div>
          <div class="hidden xl:block text-left">
            <p
              class="text-[11px] font-black text-slate-900 leading-none uppercase tracking-tighter"
            >
              <%= user.name %>
            </p>
            <p
              class="text-[9px] text-slate-400 font-bold uppercase mt-1 tracking-widest"
            >
              <%= user.role %>
            </p>
          </div>
          <i
            data-lucide="chevron-down"
            class="w-3.5 h-3.5 text-slate-400 group-hover/profile:text-slate-900 transition-transform group-hover/profile:rotate-180"
          ></i>
        </button>

        <div
          class="absolute right-0 mt-3 w-64 origin-top-right bg-white border border-slate-200 rounded-2xl shadow-xl opacity-0 invisible group-hover/profile:opacity-100 group-hover/profile:visible transition-all duration-200 z-[60] overflow-hidden"
        >
          <div class="p-4 border-b border-slate-50 bg-slate-50/50">
            <p
              class="text-[9px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1"
            >
              Session Active
            </p>
            <p class="text-xs font-bold text-slate-700 truncate">
              <%= user.email %>
            </p>
          </div>
          <div class="p-2">
            <button
              onclick="handleLogout(this)"
              class="logout-link w-full text-left"
            >
              <i data-lucide="log-out" class="w-4 h-4"></i> Log Out
            </button>
          </div>
        </div>
      </div>

      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-slate-400 hover:text-slate-900 transition-colors"
      >
        <i data-lucide="menu"></i>
      </button>
    </div>

    <% } else { %>
    <!-- <a
      href="/auth/login"
      class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all shadow-md shadow-red-100"
    >
      Login Access
    </a> -->
    <% } %>
  </div>

  <% if (user) { %>
  <div
    id="mobile-menu"
    class="hidden lg:hidden bg-white border-t border-slate-100 p-4 space-y-2"
  >
    <% if (user.role === "admin") { %>
    <a href="/" class="mobile-nav-item"
      ><i data-lucide="layout-dashboard"></i> Dashboard</a
    >
    <a href="/students" class="mobile-nav-item"
      ><i data-lucide="users"></i> Students</a
    >
    <a href="/borrow" class="mobile-nav-item"
      ><i data-lucide="arrow-left-right"></i> Issue System</a
    >
    <% } %>
    <a href="/books" class="mobile-nav-item"
      ><i data-lucide="book-marked"></i> Books</a
    >
  </div>
  <% } %>

  <style>
    /* Light Theme Nav Item Styling */
    .nav-item {
      @apply flex items-center gap-2 px-4 py-2 text-[10px] font-black uppercase tracking-widest text-slate-400 rounded-xl transition-all duration-200 hover:bg-slate-50 hover:text-slate-900;
    }
    .nav-active {
      @apply bg-red-50 text-red-600 shadow-sm;
    }
    .logout-link {
      @apply flex items-center gap-3 px-4 py-3 text-[10px] font-black text-red-600 hover:bg-red-50 rounded-xl transition-all uppercase tracking-[0.1em];
    }
    .mobile-nav-item {
      @apply flex items-center gap-3 p-3 text-[10px] font-black uppercase tracking-widest text-slate-500 bg-slate-50 rounded-xl;
    }
    .nav-item svg,
    .mobile-nav-item svg {
      width: 14px;
      height: 14px;
    }
  </style>

  <script>
    lucide.createIcons();

    const mobileBtn = document.getElementById("mobile-menu-btn");
    if (mobileBtn) {
      const mobileMenu = document.getElementById("mobile-menu");
      mobileBtn.addEventListener("click", () =>
        mobileMenu.classList.toggle("hidden")
      );
    }

    const currentPath = window.location.pathname;
    document.querySelectorAll(".nav-item, .mobile-nav-item").forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("nav-active");
      }
    });

    async function handleLogout(btn) {
      const original = btn.innerHTML;
      btn.innerHTML = `<i data-lucide="loader-2" class="w-4 h-4 animate-spin"></i> Terminating...`;
      lucide.createIcons();

      try {
        const response = await fetch("/auth/logout", { method: "POST" });
        if (response.ok) {
          localStorage.clear();
          window.location.href = "/auth/login";
        }
      } catch (err) {
        btn.innerHTML = original;
        lucide.createIcons();
      }
    }
  </script>
</header>
