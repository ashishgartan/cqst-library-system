<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Registration | CQST Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap");
      body {
        font-family: "Plus Jakarta Sans", sans-serif;
        background-color: #f8fafc;
      }
      .signup-card {
        background: white;
        border: 1px solid #e2e8f0;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
      }
      input {
        font-size: 14px !important;
        transition: all 0.2s ease;
      }
      input:focus {
        border-color: #ef4444 !important;
        background-color: white !important;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.05) !important;
      }
    </style>
  </head>
  <body class="text-slate-700 min-h-screen flex flex-col">
    <%- include('partials/header') %>

    <main class="flex-1 flex items-center justify-center p-6 bg-slate-50/50">
      <div class="max-w-xl w-full">
        <div
          class="signup-card rounded-xl p-8 md:p-12 relative overflow-hidden"
        >
          <div
            class="absolute -top-12 -right-12 w-32 h-32 bg-red-50 rounded-xl blur-3xl"
          ></div>

          <div class="text-center mb-10 relative">
            <div
              class="inline-flex items-center justify-center w-16 h-16 rounded-xl bg-slate-900 text-white mb-6 shadow-xl shadow-slate-200"
            >
              <i data-lucide="shield-check" class="w-8 h-8"></i>
            </div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">
              Admin Portal
            </h2>
            <p
              class="text-slate-400 text-[10px] font-black uppercase tracking-[0.2em] mt-3"
            >
              Master Account Enrollment
            </p>
          </div>

          <form id="signupForm" class="space-y-6 relative">
            <div class="space-y-2">
              <label
                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                >Full Name</label
              >
              <div class="relative">
                <i
                  data-lucide="user"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="name"
                  type="text"
                  placeholder="Admin Name"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                >Admin Email</label
              >
              <div class="relative">
                <i
                  data-lucide="mail"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="email"
                  type="email"
                  placeholder="amit@codequotient.com"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="block text-[10px] font-black text-red-400 uppercase tracking-widest ml-1"
                >Admin Secret Key</label
              >
              <div class="relative">
                <i
                  data-lucide="key"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="adminSecret"
                  type="password"
                  placeholder="Enter Registration Key"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="block text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                >Password</label
              >
              <div class="relative">
                <i
                  data-lucide="lock"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300"
                ></i>
                <input
                  name="password"
                  type="password"
                  placeholder="••••••••"
                  required
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl pl-12 pr-4 py-4 outline-none placeholder:text-slate-300"
                />
              </div>
            </div>

            <button
              type="submit"
              id="submitBtn"
              class="w-full bg-slate-900 hover:bg-red-600 text-white font-black py-4 rounded-xl transition-all shadow-xl shadow-slate-200 active:scale-[0.98] flex items-center justify-center gap-3 uppercase tracking-widest text-xs"
            >
              <span>Initialize Admin</span>
              <i data-lucide="arrow-right" class="w-4 h-4"></i>
            </button>
          </form>

          <div
            id="statusMsg"
            class="mt-6 text-[11px] text-center font-black uppercase tracking-widest min-h-[20px] rounded-xl transition-all"
          ></div>

          <p class="text-center text-xs font-medium text-slate-400 mt-10">
            Already registered?
            <a
              href="/auth/login"
              class="text-slate-900 font-black hover:text-red-600 transition underline underline-offset-4"
              >Sign In</a
            >
          </p>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      lucide.createIcons();

      const form = document.getElementById("signupForm");
      const statusMsg = document.getElementById("statusMsg");
      const btn = document.getElementById("submitBtn");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        btn.disabled = true;
        btn.innerHTML = `<i data-lucide="loader-2" class="w-4 h-4 animate-spin"></i> Initializing...`;
        lucide.createIcons();
        statusMsg.textContent = "";

        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());

        try {
          const res = await fetch("/auth/signup", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });

          const result = await res.json();

          if (res.ok) {
            statusMsg.textContent = "Admin Created Successfully!";
            statusMsg.className =
              "mt-6 p-4 text-green-600 bg-green-50 border border-green-100 rounded-xl text-center font-black uppercase tracking-widest";
            setTimeout(() => {
              window.location.href = "/auth/login";
            }, 1500);
          } else {
            throw new Error(result.message || "Registration failed");
          }
        } catch (err) {
          statusMsg.textContent = err.message;
          statusMsg.className =
            "mt-6 p-4 text-red-600 bg-red-50 border border-red-100 rounded-xl text-center font-black uppercase tracking-widest";
          btn.disabled = false;
          btn.innerHTML = `<span>Initialize Admin</span><i data-lucide="arrow-right" class="w-4 h-4"></i>`;
          lucide.createIcons();
        }
      });
    </script>
  </body>
</html>
