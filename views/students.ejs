<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Registry | CQST Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap");
      body {
        font-family: "Plus Jakarta Sans", sans-serif;
        background-color: #f8fafc;
      }
      .content-card {
        background: white;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
      }
      .registry-table th {
        padding: 16px 24px;
        font-size: 10px;
        font-weight: 800;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        border-bottom: 1px solid #f1f5f9;
      }
      .registry-table td {
        padding: 16px 24px;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
      }
      .search-input:focus {
        border-color: #ef4444;
        background: white;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.05);
      }
    </style>
  </head>
  <body class="text-slate-700 min-h-screen flex flex-col">
    <%- include('partials/header') %>

    <main class="flex-1 p-6 md:p-10">
      <div class="max-w-7xl mx-auto space-y-8">
        <!-- Student List and Loading  and Backupdata and Enroll Student UI -->
        <div
          class="flex flex-col md:flex-row md:items-end justify-between gap-6"
        >
          <div>
            <h2
              class="text-3xl font-black text-slate-900 tracking-tight flex items-center gap-3"
            >
              <i data-lucide="users" class="text-red-600 w-8 h-8"></i>
              Student List
            </h2>
            <div class="flex items-center gap-2 mt-2">
              <span
                id="recordCount"
                class="text-[10px] bg-slate-100 text-slate-500 px-3 py-1 rounded-full font-black uppercase tracking-widest"
              >
                Loading Registry...
              </span>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <% if (user && user.role === 'admin') { %>
            <button
              id="exportStudentsBtn"
              class="h-12 px-6 bg-white border border-slate-200 rounded-2xl text-[10px] font-black text-slate-400 hover:text-slate-900 transition-all uppercase tracking-widest flex items-center gap-2 shadow-sm"
            >
              <i data-lucide="file-down" class="w-4 h-4"></i> Backup Data
            </button>
            <a
              href="/students/add"
              class="h-12 px-6 bg-slate-900 hover:bg-red-600 text-white rounded-2xl font-black text-[10px] uppercase tracking-widest transition-all flex items-center gap-2 shadow-xl shadow-slate-200"
            >
              <i data-lucide="plus-circle" class="w-4 h-4"></i> Enroll Student
            </a>
            <% } %>
          </div>
        </div>

        <!-- Search Bar and Page Size UI -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-4">
          <div class="lg:col-span-8 relative group">
            <i
              data-lucide="search"
              class="absolute left-5 top-1/2 -translate-y-1/2 text-slate-300 w-5 h-5 group-focus-within:text-red-500 transition-colors"
            ></i>
            <input
              id="historySearch"
              type="text"
              placeholder="Search by name, roll number, or email handle..."
              class="search-input w-full pl-14 pr-16 py-4 rounded-[1.5rem] bg-slate-100/50 border border-slate-200 text-sm font-semibold outline-none transition-all placeholder:text-slate-400"
            />
            <button
              onclick="toggleAdvancedSearch()"
              class="absolute right-4 top-1/2 -translate-y-1/2 p-2 hover:bg-white rounded-xl shadow-sm transition-all"
              id="collapseBtn"
            >
              <i
                data-lucide="sliders-horizontal"
                id="collapseIcon"
                class="w-4 h-4 text-slate-400"
              ></i>
            </button>
          </div>

          <div
            class="lg:col-span-4 flex items-center px-4 bg-white border border-slate-200 rounded-[1.5rem] shadow-sm"
          >
            <span
              class="text-[10px] font-black text-slate-300 uppercase tracking-widest mr-4"
              >Page Size</span
            >
            <select
              id="limitSelector"
              class="flex-1 bg-transparent text-slate-900 text-xs font-black outline-none cursor-pointer py-4"
            >
              <option value="10">10 Entries</option>
              <option value="25">25 Entries</option>
              <option value="50">50 Entries</option>
            </select>
          </div>
        </div>

        <!-- Advanced Panel UI -->
        <div
          id="advancedPanel"
          class="hidden opacity-0 -translate-y-4 transition-all duration-300"
        >
          <div
            class="bg-white border border-slate-200 rounded-[2rem] p-8 shadow-xl shadow-slate-200/50"
          >
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div class="space-y-3">
                <label
                  class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                  >Academic Batch</label
                >
                <select
                  id="batch-filter"
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl px-5 py-3 text-xs text-slate-900 font-bold outline-none focus:border-red-500 focus:bg-white transition-all"
                ></select>
              </div>

              <div class="space-y-3">
                <label
                  class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"
                  >Account Status</label
                >
                <select
                  id="status-filter"
                  class="w-full bg-slate-50 border border-slate-200 rounded-xl px-5 py-3 text-xs text-slate-900 font-bold outline-none focus:border-red-500 focus:bg-white transition-all"
                >
                  <option value="">All Students</option>
                  <option value="true">Active Members</option>
                  <option value="false">Revoked Access</option>
                </select>
              </div>

              <div class="flex items-end gap-3">
                <button
                  onclick="manuallyApplySearch()"
                  class="flex-1 h-12 bg-red-600 hover:bg-red-700 text-white text-[10px] font-black uppercase tracking-widest rounded-xl transition-all shadow-lg shadow-red-100"
                >
                  Apply Filters
                </button>

                <button
                  onclick="resetFilters()"
                  class="h-12 px-6 bg-slate-100 text-[10px] font-black text-slate-500 hover:text-slate-900 hover:bg-slate-200 uppercase rounded-xl transition-all"
                >
                  Reset
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- Table and Pagination UI -->
        <div
          class="content-card rounded-[2.5rem] overflow-hidden border-none shadow-xl"
        >
          <!-- Table Head UI -->
          <div class="overflow-x-auto">
            <table class="min-w-full text-left registry-table">
              <thead class="bg-slate-50/50">
                <tr>
                  <th>Identity</th>
                  <th>Batch / Stream</th>
                  <th>ID / Roll No</th>
                  <th>Book Count</th>
                  <th class="text-right">Actions</th>
                </tr>
              </thead>
              <!-- Table Body UI -->
              <tbody id="studentList" class="divide-y divide-slate-50"></tbody>
            </table>
          </div>
          <!-- Pagination Controls UI -->
          <div
            class="bg-slate-50/50 p-6 border-t border-slate-100 flex justify-center"
          >
            <div id="paginationControls"></div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      lucide.createIcons();
      let currentPage = 1;
      const elements = {
        tbody: document.getElementById("studentList"),
        searchInput: document.getElementById("historySearch"),
        limitSelector: document.getElementById("limitSelector"),
        statusFilter: document.getElementById("status-filter"),
        batchFilter: document.getElementById("batch-filter"),
        recordCount: document.getElementById("recordCount"),
        paginationControls: document.getElementById("paginationControls"),
        exportBtn: document.getElementById("exportStudentsBtn"),
        advancedPanel: document.getElementById("advancedPanel"),
        collapseIcon: document.getElementById("collapseIcon"),
      };

      /**
       * Animates the Advanced Search panel using CSS transitions
       */
      function toggleAdvancedSearch() {
        elements.searchInput.value = "";
        const isHidden = elements.advancedPanel.classList.contains("hidden");
        if (isHidden) {
          elements.advancedPanel.classList.remove("hidden");
          setTimeout(() => {
            elements.advancedPanel.classList.replace(
              "opacity-0",
              "opacity-100"
            );
            elements.advancedPanel.classList.replace(
              "-translate-y-4",
              "translate-y-0"
            );
            elements.collapseIcon.classList.add("text-red-500");
          }, 10);
        } else {
          elements.advancedPanel.classList.replace("opacity-100", "opacity-0");
          elements.advancedPanel.classList.replace(
            "translate-y-0",
            "-translate-y-4"
          );
          elements.collapseIcon.classList.remove("text-red-500");
          setTimeout(() => elements.advancedPanel.classList.add("hidden"), 300);
        }
      }

      /**
       * Constructs the URL search parameters based on current filter state
       */
      const getDynamicQuery = (page = 1) => {
        const params = new URLSearchParams({
          q: elements.searchInput.value.trim(),
          limit: elements.limitSelector.value,
          status: elements.statusFilter.value,
          batch: elements.batchFilter.value,
          page: page,
        });
        return params.toString();
      };

      /**
       * Generates HTML rows for the student table based on API response
       */
      function renderStudents(data) {
        const students = data.students || [];
        elements.tbody.innerHTML = students.length
          ? ""
          : `<tr><td colspan="5" class="py-24 text-center text-slate-300 font-bold uppercase text-[10px] tracking-widest">No matching records found</td></tr>`;

        students.forEach((s) => {
          elements.tbody.innerHTML += `
            <tr class="hover:bg-slate-50/30 transition-colors group">
              <td>
                <div class="flex items-center gap-4">
                  <img src="${
                    s.profile_photo
                  }" class="w-10 h-10 rounded-xl object-cover bg-slate-100" onerror="this.src='/default_profile_photo.png'">
                  <div>
                    <p class="text-slate-900 text-sm font-black tracking-tight">${
                      s.name
                    }</p>
                    <p class="text-[10px] text-slate-400 font-medium">${
                      s.email
                    }</p>
                  </div>
                </div>
              </td>
              <td>
                <span class="px-3 py-1 bg-slate-100 text-slate-500 text-[9px] font-black uppercase rounded-lg border border-slate-200">
                  ${s.batch || s.stream || "General"}
                </span>
              </td>
              <td class="font-mono text-xs font-bold text-slate-400">
                <span class="text-red-500/60">${
                  s.student_id || "ID-NA"
                }</span> / ${s.roll_no}
              </td>
              <td>
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 rounded-full ${
                    s.active_books_count > 0 ? "bg-amber-400" : "bg-slate-200"
                  }"></div>
                  <span class="text-xs font-black text-slate-900">${
                    s.active_books_count
                  } Books</span>
                </div>
              </td>
              <td class="text-right">
                <a href="/students/details/${
                  s.roll_no
                }" class="inline-flex items-center justify-center w-10 h-10 bg-slate-50 hover:bg-slate-900 text-slate-400 hover:text-white rounded-xl transition-all">
                  <i data-lucide="chevron-right" class="w-5 h-5"></i>
                </a>
              </td>
            </tr>`;
        });

        elements.recordCount.textContent = `${
          data.totalStudents || 0
        } Registered Students`;
        renderPagination(data.totalPages, data.currentPage);
        lucide.createIcons();
      }

      /**
       * Creates the Previous/Next pagination UI
       */
      function renderPagination(totalPages, currentPage) {
        if (totalPages <= 1) {
          elements.paginationControls.innerHTML = "";
          return;
        }
        elements.paginationControls.innerHTML = `
          <div class="flex items-center gap-6">
            <button class="hover:bg-red-200 rounded-xl" onclick="changePage(${
              currentPage - 1
            })" ${
          currentPage === 1 ? "disabled" : ""
        } class="text-slate-400 hover:text-slate-900 disabled:opacity-30 transition-all">
              <i data-lucide="arrow-left" class="w-5 h-5"></i>
            </button>
            <span class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-900">Page ${currentPage} <span class="text-slate-300">of</span> ${totalPages}</span>
            <button  class="hover:bg-red-200 rounded-xl" onclick="changePage(${
              currentPage + 1
            })" ${
          currentPage === totalPages ? "disabled" : ""
        } class="text-slate-400 hover:text-slate-900 disabled:opacity-30 transition-all">
              <i data-lucide="arrow-right" class="w-5 h-5"></i>
            </button>
          </div>`;
        lucide.createIcons();
      }

      /**
       * Fetches data from the server with current filters and pagination
       */
      async function loadStudents(page = 1) {
        elements.tbody.innerHTML = `<tr><td colspan="5" class="py-24 text-center"><div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-slate-200 border-t-red-500"></div></td></tr>`;
        try {
          const res = await fetch(
            `/students/paginated?${getDynamicQuery(page)}`
          );
          const data = await res.json();
          renderStudents(data);
        } catch (err) {
          console.error(err);
        }
      }

      /**
       * Global handler for page changes
       */
      function changePage(page) {
        currentPage = page;
        loadStudents(page);
        window.scrollTo({ top: 0, behavior: "smooth" });
      }

      /**
       * Clears all filters and reloads the first page
       */
      function resetFilters() {
        elements.searchInput.value = "";
        elements.statusFilter.value = "";
        elements.batchFilter.value = "";
        loadStudents(1);
      }

      /**
       * Fetches unique batch names from DB to populate the filter dropdown
       */
      async function populateBatchDropdown() {
        try {
          const res = await fetch("/students/batches");
          const data = await res.json();
          if (data.success) {
            elements.batchFilter.innerHTML =
              '<option value="">All Batches</option>' +
              data.batches
                .map((b) => `<option value="${b}">${b}</option>`)
                .join("");
          }
        } catch (err) {
          console.error(err);
        }
      }

      /**
       * Debounce implementation to prevent excessive API calls while typing
       */
      const searchFun = () => {
        clearTimeout(window.searchTimer);
        window.searchTimer = setTimeout(() => loadStudents(1), 400);
      };

      // Attach event listeners to all filter inputs
      [
        "historySearch",
        "limitSelector",
        "status-filter",
        "batch-filter",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", searchFun);
      });

      // Initializing routines on page load
      document.addEventListener("DOMContentLoaded", () => {
        populateBatchDropdown();
        loadStudents(1);
      });
    </script>
  </body>
</html>
